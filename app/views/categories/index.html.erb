

    
<div class = "container">
    <div class="cards">
      <% @categories.each do |category| %>
     
        <div class="cardbox">
            
            <% if category.photo.attached? %>
              <%= link_to category_path(category) do %>
                  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path category.photo.key, crop: :fill %>')">
                  </div>
              <% end %>

              <div class="cardfoot">
                <h2>  <%= category.name %> </h2>
                <p> <%= category.description %></p>
              </div>
        
            <% end %>
            
        </div>
        
      <% end %>
    </div>
</div>

