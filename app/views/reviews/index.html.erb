<h1 class="text-center">Vos avis</h1>





<div class="container">
    <% @reviews.each do |review| %>
      
      <% if review.photo.attached? %>
<div id="reviews">
        <div class="card-review" style="background-image: url('<%= cl_image_path review.photo.key, height: 300, width: 400, crop: :fill %>')">
        </div>            
          <%# </div> %>
      <% end %>

    <div class="review-content">
      <p><%= review.content %></p>

          <% (review.rating).times do %>
              <i class="fas fa-star"></i> 
          <% end %>
          <p><%= review.user.email %></p>
    </div>  
    
</div>

<% end %>



</div>
<%= link_to "Ajoutez votre avis", new_review_path %>



